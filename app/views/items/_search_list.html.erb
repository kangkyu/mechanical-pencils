
<ul role="list" class="divide-y divide-gray-100">
  <% items.each do |item| %>

  <li class="flex justify-between gap-x-6 py-5">
    <div class="flex min-w-0 gap-x-4">
      <% if item.image.attached? %>
      <%= image_tag item.image.variant(:thumb), class: "h-12 w-12 flex-none rounded-full bg-gray-50" %>
      <% else %>
      <img class="h-12 w-12 flex-none rounded-full bg-gray-50" src="" alt="">
      <% end %>
      <div class="min-w-0 flex-auto">
        <p class="text-sm font-semibold leading-6 text-gray-900"><%= link_to item.title, item %></p>
        <p class="mt-1 truncate text-xs leading-5 text-gray-500">Added <%= time_ago_in_words(item.created_at) %> ago</p>
      </div>
    </div>
    <div class="hidden shrink-0 sm:flex sm:flex-col sm:items-end">
      <% if signed_in? && owned(current_user, item) %>
        <span class="outline outline-2 outline-red-500 hover:outline-red-700 text-red-500 hover:text-red-700 font-bold py-1 px-2 rounded-lg">owned</span>
      <% end %>
      <p class="text-sm leading-6 text-gray-900"></p>
      <p class="mt-1 text-xs leading-5 text-gray-500"></time></p>
    </div>
  </li>

  <% end %>
</ul>
