<div class="bg-white">
  <div class="mx-auto max-w-2xl px-4 py-16 sm:px-6 sm:py-24 lg:grid lg:max-w-7xl lg:grid-cols-2 lg:gap-x-8 lg:px-8">

    <!-- Product details -->
    <div class="lg:max-w-lg lg:self-end">
      <div class="mt-4">
        <div class="flex items-start justify-between gap-4">
          <h1 class="text-3xl font-bold tracking-tight text-gray-900 sm:text-4xl"><%= @item.title %></h1>
          <% if signed_in? && current_user.admin? %>
            <div class="flex items-center gap-2 flex-shrink-0">
              <%= link_to "Edit", edit_admin_item_path(@item), class: "rounded-md bg-white px-3 py-2 text-sm font-semibold text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 hover:bg-gray-50 transition-colors" %>
              <%= button_to "Remove", admin_item_path(@item), method: :delete, form: { data: { turbo_confirm: 'Are you sure?' } }, class: "rounded-md bg-red-600 px-3 py-2 text-sm font-semibold text-white shadow-sm hover:bg-red-500 transition-colors" %>
            </div>
          <% end %>
        </div>

        <% if signed_in? && @user_ownership %>
          <span class="inline-flex items-center rounded-md px-1.5 py-0.5 text-xs font-medium text-red-600 ring-1 ring-inset ring-red-600">OWNED</span>
        <% end %>
        <p class="mt-1 max-w-2xl text-sm leading-6 text-gray-500">owned by <%= pluralize @item.ownerships.size, "user" %></p>
      </div>

      <section aria-labelledby="information-heading" class="mt-4">
        <h2 id="information-heading" class="sr-only">Product information</h2>

        <% if signed_in? %>
          <div class="mt-8 p-6 bg-gray-50 rounded-xl border border-gray-200">
            <% if @user_ownership %>
              <div class="flex items-center space-x-4">
                <% if @user_ownership.proof.attached? %>
                  <%= link_to collection_items_path, class: "block flex-shrink-0" do %>
                    <%= image_tag @user_ownership.proof, class: "h-16 w-16 rounded-lg object-cover shadow-md ring-2 ring-emerald-500 ring-offset-2" %>
                  <% end %>
                  <div class="min-w-0">
                    <p class="text-sm text-gray-900">
                      <span class="font-semibold">You own this item</span>
                      <span class="text-xs font-normal text-gray-500">with photo proof</span>
                    </p>
                    <%= button_to unown_item_path(@item), class: "mt-1 text-xs text-gray-500 hover:text-red-600 transition-colors", confirm: "Are you sure you want to remove this from your collection?" do %>
                      Remove from collection
                    <% end %>
                  </div>
                <% else %>
                  <div class="h-16 w-16 rounded-lg bg-gray-200 flex items-center justify-center flex-shrink-0">
                    <svg class="h-8 w-8 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 9a2 2 0 012-2h.93a2 2 0 001.664-.89l.812-1.22A2 2 0 0110.07 4h3.86a2 2 0 011.664.89l.812 1.22A2 2 0 0018.07 7H19a2 2 0 012 2v9a2 2 0 01-2 2H5a2 2 0 01-2-2V9z" />
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 13a3 3 0 11-6 0 3 3 0 016 0z" />
                    </svg>
                  </div>
                  <div class="min-w-0">
                    <p class="text-sm font-semibold text-gray-900">You own this item</p>
                    <div class="mt-2 flex flex-wrap gap-2">
                      <%= link_to "Add photo proof", edit_item_ownership_path(@item), class: "inline-flex items-center rounded-md bg-indigo-600 px-3 py-1.5 text-xs font-semibold text-white shadow-sm hover:bg-indigo-500 transition-colors" %>
                      <%= button_to unown_item_path(@item), class: "text-xs text-gray-500 hover:text-red-600 transition-colors", confirm: "Are you sure you want to remove this from your collection?" do %>
                        Remove
                      <% end %>
                    </div>
                  </div>
                <% end %>
              </div>
            <% else %>
              <div class="text-center">
                <svg class="mx-auto h-12 w-12 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6v6m0 0v6m0-6h6m-6 0H6" />
                </svg>
                <h3 class="mt-2 text-sm font-semibold text-gray-900">Add to your collection</h3>
                <p class="mt-1 text-sm text-gray-500">Mark this item as owned to track it in your collection.</p>
                <div class="mt-6">
                  <%= button_to "Add to collection", own_item_path(@item), class: "inline-flex items-center rounded-md bg-indigo-600 px-3 py-2 text-sm font-semibold text-white shadow-sm hover:bg-indigo-500 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-indigo-600 transition-colors" %>
                </div>
              </div>
            <% end %>
          </div>
        <% end %>

        <div class="mt-6 flex items-center">
          <svg class="h-5 w-5 shrink-0 text-green-500" viewBox="0 0 20 20" fill="currentColor" aria-hidden="true">
            <path fill-rule="evenodd" d="M16.704 4.153a.75.75 0 01.143 1.052l-8 10.5a.75.75 0 01-1.127.075l-4.5-4.5a.75.75 0 011.06-1.06l3.894 3.893 7.48-9.817a.75.75 0 011.05-.143z" clip-rule="evenodd" />
          </svg>
          <p class="ml-2 text-sm text-gray-500">Manufacturer: <%= @item.item_maker&.title %></p>
        </div>

        <div class="mt-6 flex items-center">
          <svg class="h-5 w-5 shrink-0 text-green-500" viewBox="0 0 20 20" fill="currentColor" aria-hidden="true">
            <path fill-rule="evenodd" d="M16.704 4.153a.75.75 0 01.143 1.052l-8 10.5a.75.75 0 01-1.127.075l-4.5-4.5a.75.75 0 011.06-1.06l3.894 3.893 7.48-9.817a.75.75 0 011.05-.143z" clip-rule="evenodd" />
          </svg>
          <p class="ml-2 text-sm text-gray-500">Model name: <%= @item.model_number %></p>
        </div>

        <div class="mt-6 flex items-center">
          <svg class="h-5 w-5 shrink-0 text-green-500" viewBox="0 0 20 20" fill="currentColor" aria-hidden="true">
            <path fill-rule="evenodd" d="M16.704 4.153a.75.75 0 01.143 1.052l-8 10.5a.75.75 0 01-1.127.075l-4.5-4.5a.75.75 0 011.06-1.06l3.894 3.893 7.48-9.817a.75.75 0 011.05-.143z" clip-rule="evenodd" />
          </svg>
          <p class="ml-2 text-sm text-gray-500">Tip Retractable? <%= @item.tip_retractable %></p>
        </div>

        <div class="mt-6 flex items-center">
          <svg class="h-5 w-5 shrink-0 text-green-500" viewBox="0 0 20 20" fill="currentColor" aria-hidden="true">
            <path fill-rule="evenodd" d="M16.704 4.153a.75.75 0 01.143 1.052l-8 10.5a.75.75 0 01-1.127.075l-4.5-4.5a.75.75 0 011.06-1.06l3.894 3.893 7.48-9.817a.75.75 0 011.05-.143z" clip-rule="evenodd" />
          </svg>
          <p class="ml-2 text-sm text-gray-500">Eraser Attached? <%= @item.eraser_attached %></p>
        </div>

        <div class="mt-6 flex items-center">
          <svg class="h-5 w-5 shrink-0 text-green-500" viewBox="0 0 20 20" fill="currentColor" aria-hidden="true">
            <path fill-rule="evenodd" d="M16.704 4.153a.75.75 0 01.143 1.052l-8 10.5a.75.75 0 01-1.127.075l-4.5-4.5a.75.75 0 011.06-1.06l3.894 3.893 7.48-9.817a.75.75 0 011.05-.143z" clip-rule="evenodd" />
          </svg>
          <p class="ml-2 text-sm text-gray-500">Item Groups: <%= safe_join(@item.item_groups.map { |group| link_to(group.title, item_group_path(group)) }, " / ".html_safe) %></p>
        </div>

        <div class="mt-8 flex gap-4">
          <button type="button" data-controller="external-link" data-external-link-url-value="<%= @item.jetpens_url %>" data-external-link-name-value="JetPens" data-action="click->external-link#open" class="inline-flex items-center gap-x-2 rounded-md bg-white px-4 py-2 text-sm font-semibold text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 hover:bg-gray-50 transition-colors cursor-pointer">
            <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="h-5 w-5 text-gray-400">
              <path stroke-linecap="round" stroke-linejoin="round" d="m16.862 4.487 1.687-1.688a1.875 1.875 0 1 1 2.652 2.652L6.832 19.82a4.5 4.5 0 0 1-1.897 1.13l-2.685.8.8-2.685a4.5 4.5 0 0 1 1.13-1.897L16.863 4.487Zm0 0L19.5 7.125" />
            </svg>
            JetPens
          </button>
          <button type="button" data-controller="external-link" data-external-link-url-value="<%= @item.blick_url %>" data-external-link-name-value="Blick" data-action="click->external-link#open" class="inline-flex items-center gap-x-2 rounded-md bg-white px-4 py-2 text-sm font-semibold text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 hover:bg-gray-50 transition-colors cursor-pointer">
            <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="h-5 w-5 text-gray-400">
              <path stroke-linecap="round" stroke-linejoin="round" d="M13.5 21v-7.5a.75.75 0 0 1 .75-.75h3a.75.75 0 0 1 .75.75V21m-4.5 0H2.36m11.14 0H18m0 0h3.64m-1.39 0V9.349M3.75 21V9.349m0 0a3.001 3.001 0 0 0 3.75-.615A2.993 2.993 0 0 0 9.75 9.75c.896 0 1.7-.393 2.25-1.016a2.993 2.993 0 0 0 2.25 1.016c.896 0 1.7-.393 2.25-1.015a3.001 3.001 0 0 0 3.75.614m-16.5 0a3.004 3.004 0 0 1-.621-4.72l1.189-1.19A1.5 1.5 0 0 1 5.378 3h13.243a1.5 1.5 0 0 1 1.06.44l1.19 1.189a3 3 0 0 1-.621 4.72M6.75 18h3.75a.75.75 0 0 0 .75-.75V13.5a.75.75 0 0 0-.75-.75H6.75a.75.75 0 0 0-.75.75v3.75c0 .414.336.75.75.75Z" />
            </svg>
            Blick
          </button>
        </div>

      </section>
    </div>

    <!-- Product image -->
    <div class="mt-10 lg:col-start-2 lg:row-span-2 lg:mt-0 lg:self-center">
      <div class="aspect-square overflow-hidden rounded-lg">
        <%= image_tag @item.image.attached? ? @item.image : "https://imageplaceholder.net/400x600", class: "h-full w-full object-cover object-center" %>
      </div>

      <div class="flex flex-col-reverse">
        <!-- Image selector -->
        <div class="mx-auto mt-6 w-full max-w-2xl sm:block lg:max-w-none">

        <% if @item.ownerships.any? %>
          <div class="grid grid-cols-4 gap-6" aria-orientation="horizontal" role="tablist">
          <% @item.ownerships.each do |ownership| %>

            <% if ownership.proof.attached? %>
              <%= link_to user_path(ownership.user), class: "relative flex h-24 cursor-pointer items-center justify-center rounded-md bg-white text-sm font-medium uppercase text-gray-900 hover:bg-gray-50 focus:outline-none focus:ring focus:ring-opacity-50 focus:ring-offset-4" do %>
              <span class="absolute inset-0 overflow-hidden rounded-md">
                <%= image_tag ownership.proof, class: "h-full w-full object-cover object-center" %>
              </span>
              <!-- Selected: "ring-indigo-500", Not Selected: "ring-transparent" -->
              <span class="pointer-events-none absolute inset-0 rounded-md ring-2 ring-transparent ring-offset-2" aria-hidden="true"></span>

              <% end %>
            <% end %>
          <% end %>
          </div>
        <% end %>
        </div>
      </div>
    </div>
  </div>

</div>
