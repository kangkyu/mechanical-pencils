<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-6">
  <div class="w-full max-w-md mx-auto bg-white p-8 rounded-lg shadow">
    <div class="mb-4">
      <%= form_with url: items_path, method: :get, class: 'mb-4' do %>
        <input type="text" name="search" placeholder="Search..." class="w-full p-2 border border-gray-300 rounded focus:outline-none focus:ring-2 focus:ring-blue-500" value="<%= params[:search] %>">
      <% end %>
    </div>

    <ul role="list" class="divide-y divide-gray-100">
      <%= render @items %>
    </ul>
  </div>
</div>
