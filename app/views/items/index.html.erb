<div class="w-full max-w-6xl bg-white p-8 rounded-lg shadow-lg">
  <div class="mb-4">
    <%= form_with url: items_path, method: :get, class: 'mb-4' do %>
      <input type="text" name="search" placeholder="Search..." class="w-full p-2 border border-gray-300 rounded focus:outline-none focus:ring-2 focus:ring-blue-500" value="<%= params[:search] %>">
    <% end %>
  </div>
  <ul role="list" class="grid grid-cols-1 gap-6 sm:grid-cols-2 lg:grid-cols-3">
    <%= render @items %>
  </ul>

  <div class="w-full mt-6">
    <%== pagy_nav(@pagy) if @pagy.pages > 1 %>
  </div>
</div>
