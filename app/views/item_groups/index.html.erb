<div class="w-full max-w-4xl">
  <div class="flex items-center justify-between mb-8">
    <h1 class="text-2xl font-semibold text-gray-900">Item Groups</h1>
    <% if signed_in? && current_user.admin? %>
      <%= link_to "New Group", new_admin_item_group_path, class: "rounded-md bg-indigo-600 px-3 py-2 text-sm font-semibold text-white shadow-sm hover:bg-indigo-500 transition-colors" %>
    <% end %>
  </div>

  <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-4">
    <% @item_groups.each do |group| %>
      <%= link_to item_group_path(group), class: "block p-6 bg-white rounded-lg border border-gray-200 shadow-sm hover:shadow-md hover:border-indigo-200 transition-all" do %>
        <h2 class="text-lg font-semibold text-gray-900 mb-2"><%= group.title %></h2>
        <p class="text-sm text-gray-500"><%= pluralize(group.items.count, "item") %></p>
      <% end %>
    <% end %>
  </div>

  <% if @item_groups.empty? %>
    <div class="text-center py-12">
      <p class="text-gray-500">No item groups yet.</p>
    </div>
  <% end %>
</div>
