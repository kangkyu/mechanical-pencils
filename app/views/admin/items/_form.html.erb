<%= form_with model: item, url: admin_item_path(item), id: dom_id(item), data: { controller: "hello" } do |f| %>

  <div class="space-y-12">

    <div class="border-b border-gray-900/10 pb-12">
      <h2 class="text-base font-semibold leading-7 text-gray-900">Edit item</h2>
      <% if item.errors.any? %>
        <div class="mt-4 rounded-md bg-red-50 p-4">
          <p class="text-sm font-medium text-red-800"><%= item.errors.full_messages.to_sentence %></p>
        </div>
      <% end %>

      <div class="mt-10 grid grid-cols-1 gap-x-6 gap-y-8 sm:grid-cols-6">
        <div class="sm:col-span-3">
          <label for="item_title" class="block text-sm font-medium leading-6 text-gray-900">Title <span class="text-red-500">*</span></label>
          <div class="mt-2">
            <%= f.text_field :title, class: "block w-full rounded-md border-0 py-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-indigo-600 sm:text-sm sm:leading-6" %>
          </div>
        </div>
        <div class="sm:col-span-3">
          <label for="item_maker_id" class="block text-sm font-medium leading-6 text-gray-900">Maker <span class="text-red-500">*</span></label>
          <div class="mt-2 relative">
            <%= f.collection_select :maker_id, @makers, :id, :title, { prompt: "Select a maker" }, { class: "block w-full appearance-none rounded-md border-0 py-1.5 pl-3 pr-10 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 focus:ring-2 focus:ring-inset focus:ring-indigo-600 sm:text-sm sm:leading-6 bg-white cursor-pointer" } %>
            <div class="pointer-events-none absolute inset-y-0 right-0 flex items-center pr-3">
              <svg class="h-5 w-5 text-gray-400" viewBox="0 0 20 20" fill="currentColor">
                <path fill-rule="evenodd" d="M5.23 7.21a.75.75 0 011.06.02L10 11.168l3.71-3.938a.75.75 0 111.08 1.04l-4.25 4.5a.75.75 0 01-1.08 0l-4.25-4.5a.75.75 0 01.02-1.06z" clip-rule="evenodd" />
              </svg>
            </div>
          </div>
        </div>

        <div class="sm:col-span-3">
          <%= f.label :model_number, class: "block text-sm font-medium leading-6 text-gray-900" %>
          <div class="mt-2">
            <%= f.text_field :model_number, class: "block w-full rounded-md border-0 py-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-indigo-600 sm:text-sm sm:leading-6" %>
          </div>
        </div>
        <div class="sm:col-span-3">
          <%= f.label :tip_retractable, class: "block text-sm font-medium leading-6 text-gray-900 mb-3" %>
          <div class="space-y-3">
            <div class="flex items-center">
              <%= f.radio_button :tip_retractable, "Yes", class: "h-4 w-4 border-gray-300 text-indigo-600 focus:ring-indigo-600" %>
              <%= f.label :tip_retractable_yes, "Yes", class: "ml-3 block text-sm font-medium leading-6 text-gray-900" %>
            </div>
            <div class="flex items-center">
              <%= f.radio_button :tip_retractable, "No", class: "h-4 w-4 border-gray-300 text-indigo-600 focus:ring-indigo-600" %>
              <%= f.label :tip_retractable_no, "No", class: "ml-3 block text-sm font-medium leading-6 text-gray-900" %>
            </div>
          </div>
        </div>
        <div class="sm:col-span-3">
          <%= f.label :eraser_attached, class: "block text-sm font-medium leading-6 text-gray-900 mb-3" %>
          <div class="space-y-3">
            <div class="flex items-center">
              <%= f.radio_button :eraser_attached, "Yes", class: "h-4 w-4 border-gray-300 text-indigo-600 focus:ring-indigo-600" %>
              <%= f.label :eraser_attached_yes, "Yes", class: "ml-3 block text-sm font-medium leading-6 text-gray-900" %>
            </div>
            <div class="flex items-center">
              <%= f.radio_button :eraser_attached, "No", class: "h-4 w-4 border-gray-300 text-indigo-600 focus:ring-indigo-600" %>
              <%= f.label :eraser_attached_no, "No", class: "ml-3 block text-sm font-medium leading-6 text-gray-900" %>
            </div>
          </div>
        </div>

        <div class="sm:col-span-6">
          <%= f.label :image, class: "block text-sm font-medium leading-6 text-gray-900" %>
          <div class="mt-2 flex justify-center rounded-lg border border-dashed border-gray-900/25 px-6 py-10">
            <div class="text-center">
              <svg class="mx-auto h-12 w-12 text-gray-300" viewBox="0 0 24 24" fill="currentColor">
                <path fill-rule="evenodd" d="M1.5 6a2.25 2.25 0 012.25-2.25h16.5A2.25 2.25 0 0122.5 6v12a2.25 2.25 0 01-2.25 2.25H3.75A2.25 2.25 0 011.5 18V6zM3 16.06V18c0 .414.336.75.75.75h16.5A.75.75 0 0021 18v-1.94l-2.69-2.689a1.5 1.5 0 00-2.12 0l-.88.879.97.97a.75.75 0 11-1.06 1.06l-5.16-5.159a1.5 1.5 0 00-2.12 0L3 16.061zm10.125-7.81a1.125 1.125 0 112.25 0 1.125 1.125 0 01-2.25 0z" clip-rule="evenodd" />
              </svg>
              <div class="mt-4 flex text-sm leading-6 text-gray-600">
                <label for="item_image" class="relative cursor-pointer rounded-md bg-white font-semibold text-indigo-600 focus-within:outline-none focus-within:ring-2 focus-within:ring-indigo-600 focus-within:ring-offset-2 hover:text-indigo-500">
                  <span>Upload a file</span>
                  <%= f.file_field :image, class: "sr-only", id: "item_image" %>
                </label>
                <p class="pl-1">or drag and drop</p>
              </div>
              <p class="text-xs leading-5 text-gray-600">PNG, JPG, GIF up to 10MB</p>
            </div>
          </div>
        </div>

        <div class="sm:col-span-3">
          <%= f.label :jetpens_url, "JetPens URL", class: "block text-sm font-medium leading-6 text-gray-900" %>
          <div class="mt-2">
            <%= f.url_field :jetpens_url, placeholder: "https://www.jetpens.com/...", class: "block w-full rounded-md border-0 py-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-indigo-600 sm:text-sm sm:leading-6" %>
          </div>
        </div>

        <div class="sm:col-span-3">
          <%= f.label :blick_url, "Blick URL", class: "block text-sm font-medium leading-6 text-gray-900" %>
          <div class="mt-2">
            <%= f.url_field :blick_url, placeholder: "https://www.dickblick.com/...", class: "block w-full rounded-md border-0 py-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-indigo-600 sm:text-sm sm:leading-6" %>
          </div>
        </div>
      </div>
    </div>
  </div>

  <div class="mt-8 flex items-center justify-end gap-x-6">
    <%= link_to "Cancel", item_path(item), class: "text-sm font-semibold leading-6 text-gray-900 hover:text-gray-700 transition-colors" %>
    <%= f.submit "Update Item", class: "rounded-md bg-indigo-600 px-4 py-2.5 text-sm font-semibold text-white shadow-sm hover:bg-indigo-500 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-indigo-600 transition-colors cursor-pointer" %>
  </div>
<% end %>
